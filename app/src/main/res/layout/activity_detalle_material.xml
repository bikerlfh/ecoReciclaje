<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.bikerlfh.ecoreciclaje.DetalleMaterialActivity">



        <TextView
            android:layout_width="192dp"
            android:layout_height="wrap_content"
            android:text="@string/title_nombrematerial"
            android:id="@+id/lbl_titulo_detallematerial"
            android:layout_gravity="center_horizontal"
            android:textColor="@android:color/holo_green_dark"
            android:textSize="23dp"
            android:textAlignment="center"
            android:textStyle="bold|italic"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/title_codigo"
            android:id="@+id/lbl_codigo_detallematerial"
            android:layout_gravity="center_horizontal"
            android:layout_above="@+id/img_detallematerial"
            android:layout_toRightOf="@+id/img_detallematerial"
            android:layout_toEndOf="@+id/img_detallematerial"
            android:textColor="@color/abc_primary_text_disable_only_material_dark" />

        <ImageView
            android:layout_width="90dp"
            android:layout_height="104dp"
            android:id="@+id/img_detallematerial"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/ic_metal"
            android:textAlignment="center"
            android:layout_marginTop="61dp"
            android:layout_below="@+id/lbl_titulo_detallematerial"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_toLeftOf="@+id/lbl_tipomaterial_detallematerial"
            android:layout_toStartOf="@+id/lbl_tipomaterial_detallematerial" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/title_descripcionmaterial"
            android:id="@+id/lbl_descripcion_detallematerial"
            android:textSize="22px"
            android:textColor="@color/abc_input_method_navigation_guard"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:scrollbars = "vertical"
            android:layout_below="@+id/lbl_tipomaterial_detallematerial" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/lbl_tipomaterial_detallematerial"
            android:layout_gravity="center_horizontal"
            android:text="@string/title_tipomaterial"
            android:layout_below="@+id/img_detallematerial"
            android:layout_centerHorizontal="true" />

</RelativeLayout>
