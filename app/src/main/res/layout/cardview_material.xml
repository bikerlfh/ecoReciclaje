<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="10dp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cvMaterial"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="#FEFEFE"
        android:layout_margin="1dp"
        app:cardCornerRadius="4dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/img_cv_material"
                android:src="@drawable/ic_inf"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/lbl_cv_titulo_material"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/img_detallematerial"
                android:layout_alignParentTop="true"
                android:textSize="20sp"
                android:text="@string/title_nombrematerial" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>



</LinearLayout>