<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="bikerlfh.ecorecycle">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.bikerlfh.ecoreciclaje.Principal"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.bikerlfh.ecoreciclaje.MenuPrincipal"
            android:label="@string/title_activity_menu_principal"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.bikerlfh.ecoreciclaje.ReciclajeActivity"
            android:label="@string/title_activity_reciclaje"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.bikerlfh.ecoreciclaje.LugaresActivity"
            android:label="@string/title_activity_lugares"
            android:theme="@style/AppTheme.NoActionBar" />

        <activity android:name="com.bikerlfh.ecoreciclaje.DetalleInformacionActivity" />
        <activity android:name="com.bikerlfh.ecoreciclaje.DetalleMaterialActivity"></activity>
    </application>

</manifest>